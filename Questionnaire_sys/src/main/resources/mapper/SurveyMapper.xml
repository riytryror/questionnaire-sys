<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.whu.survey.mapper.SurveyMapper">

    <resultMap id="BaseResultMap" type="com.whu.survey.entity.Survey">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insert" parameterType="com.whu.survey.entity.Survey"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_survey (user_id, title, description, status)
        VALUES (#{userId}, #{title}, #{description}, #{status})
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM t_survey WHERE id = #{id}
    </select>

</mapper>