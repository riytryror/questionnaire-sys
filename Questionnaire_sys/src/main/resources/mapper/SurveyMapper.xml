<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.whu.survey.mapper.SurveyMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_survey (title, description, create_time, status, user_id)
        VALUES (#{title}, #{description}, NOW(), 1, 1)
    </insert>

    <select id="selectById" resultType="com.whu.survey.entity.Survey">
        SELECT * FROM t_survey WHERE id = #{id}
    </select>

    <select id="selectAll" resultType="com.whu.survey.entity.Survey">
        SELECT * FROM t_survey ORDER BY id DESC
    </select>

    <delete id="deleteById">
        DELETE FROM t_survey WHERE id = #{id}
    </delete>

</mapper>