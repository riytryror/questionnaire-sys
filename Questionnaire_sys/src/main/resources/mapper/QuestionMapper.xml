<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.whu.survey.mapper.QuestionMapper">

    <resultMap id="BaseResultMap" type="com.whu.survey.entity.Question">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="survey_id" property="surveyId" jdbcType="INTEGER"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="required" property="required" jdbcType="INTEGER"/>
        <result column="order_no" property="orderNo" jdbcType="INTEGER"/>

        <result column="config" property="config" jdbcType="OTHER"
                typeHandler="com.whu.survey.handler.JsonTypeHandler"/>
    </resultMap>

    <insert id="insert" parameterType="com.whu.survey.entity.Question" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_question
        (survey_id, type, title, required, order_no, config)
        VALUES
        (
        #{surveyId}, #{type}, #{title}, #{required}, #{orderNo},
        #{config, typeHandler=com.whu.survey.handler.JsonTypeHandler}
        )
    </insert>

    <select id="selectBySurveyId" resultMap="BaseResultMap">
        SELECT * FROM t_question WHERE survey_id = #{surveyId} ORDER BY order_no ASC
    </select>

</mapper>